<body>

<div class="container">
  <h2>Controle de Aluguel</h2>
  <form id="rentForm">
    <label for="enderecoCompleto">Endereço Completo:</label>
    <input type="text" id="enderecoCompleto" required>
    
    <label for="nomeProprietaria">Nome da Proprietária:</label>
    <input type="text" id="nomeProprietaria" required>
    
    <label for="valorAluguel">Valor do Aluguel (R$):</label>
    <input type="number" id="valorAluguel" min="0" step="0.01" required>
    
    <label for="valorCondominio">Valor do Condomínio (R$):</label>
    <input type="number" id="valorCondominio" min="0" step="0.01" required>
    
    <label for="valorIPTU">Valor do IPTU (R$):</label>
    <input type="number" id="valorIPTU" min="0" step="0.01" required>
    
    <label for="taxaAdministracao">Taxa de Administração (R$):</label>
    <input type="number" id="taxaAdministracao" min="0" step="0.01" required>
    
    <label for="dataPagamento">Data de Pagamento:</label>
    <input type="date" id="dataPagamento" required>
    
    <input type="submit" value="Calcular Total">
  </form>
  
  <div id="total"></div>
</div>

<script>
  document.getElementById('rentForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const enderecoCompleto = document.getElementById('enderecoCompleto').value;
    const nomeProprietaria = document.getElementById('nomeProprietaria').value;
    const valorAluguel = parseFloat(document.getElementById('valorAluguel').value);
    const valorCondominio = parseFloat(document.getElementById('valorCondominio').value);
    const valorIPTU = parseFloat(document.getElementById('valorIPTU').value);
    const taxaAdministracao = parseFloat(document.getElementById('taxaAdministracao').value);
    const dataPagamento = document.getElementById('dataPagamento').value;

    const total = valorAluguel + valorCondominio + valorIPTU + taxaAdministracao;
    const formattedDate = new Date(dataPagamento);
    const day = formattedDate.getDate();
    const month = formattedDate.getMonth() + 1;
    const year = formattedDate.getFullYear();
    
    document.getElementById('total').innerHTML = `Endereço: ${enderecoCompleto}<br>Proprietária: ${nomeProprietaria}<br>Total a Pagar (R$): ${total.toFixed(2)}<br>Data de Pagamento: ${day}/${month}/${year}`;
  });
</script>

</body>
